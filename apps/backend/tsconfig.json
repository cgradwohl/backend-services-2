{
  "forceConsistentCasingInFileNames": true,
  "noImplicitReturns": true,
  "strict": true,
  "noUnusedLocals": true,
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "inlineSources": true,
    "lib": ["es5", "es6", "dom", "es2021", "esnext.asynciterable"],
    "sourceMap": true,
    "sourceRoot": "/",
    "target": "ES2015",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["__smoke_tests__"]
}
